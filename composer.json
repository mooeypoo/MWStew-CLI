{
  "name": "mooeypoo/mwstew-cli",
  "description": "A command-line tool to create base mediawiki extension files",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Moriel Schottlender",
      "email": "mooeypoo@gmail.com",
      "homepage": "http://moriel.smarterthanthat.com",
      "role": "Developer"
    }
  ],
  "bin": [ "bin/mwstew" ],
  "scripts": {
    "test": [
      "./vendor/bin/phpunit --colors --verbose --coverage-clover './build/logs/phpunit_clover.xml' --configuration tests/phpunit.xml",
      "./vendor/bin/minus-x check ."
    ]
  },
  "require": {
    "mooeypoo/mwstew-builder": "^1.1",
    "symfony/console": "^4.2"
  },
  "require-dev": {
    "mediawiki/minus-x": "^0.3",
    "phpunit/phpunit": "^7.5",
    "php-coveralls/php-coveralls": "^2.1",
    "symfony/framework-bundle": "^4.2",
    "mikey179/vfsStream": "^1.6"
  },
  "autoload": {
      "psr-4": {
          "MWStew\\CLI\\": "src/",
          "MWStew\\CLI\\Helpers\\": "src/Helpers"
      }
  }
}
